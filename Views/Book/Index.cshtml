@model List<quanlisach.Models.Book>
@{
    ViewBag.Title = "Danh sách sách";
}
<h2>Danh sách sách</h2>
<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Thêm sách mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Tên sách</th>
            <th>Tác giả</th>
            <th>Giá</th>
            <th>Ngày xuất bản</th>
            <th>Loại sách</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.PublishDate.ToString("dd/MM/yyyy")</td>
                <td>@book.Category</td>
                <td>
                    <a href="@Url.Action("Edit", "Book", new { id = book.Id })" class="btn btn-warning">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
